<h1>ユーザー情報の変更</h1>

<%= form_with model: current_user, local: true do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
  <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "off" %>
    <small>(空白の場合は変更されません)</small>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div>
    <%= form.submit "更新", class: "bg-blue-500 text-white p-2 rounded" %>
  </div>

  <div>
    <%= link_to 'アカウントを削除', user_path(current_user), method: :delete, data: { confirm: '本当にアカウントを削除しますか？' }, class: "btn btn-danger" %>
  </div>

  <div class="mt-4">
    <%= link_to 'メインページに戻る', main_path, class: "btn btn-secondary" %>
  </div>
<% end %>
