<h2>新規投稿</h2>
<%= form_with(model: @post, local: true) do |f| %>
  <div class="flex flex-col space-y-4">
    <div class="card bg-base-300 rounded-box">
      <div class="p-4">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: "input input-bordered border-black w-full" %>
      </div>
    </div>

    <div class="divider"></div>

    <div class="card bg-base-300 rounded-box">
      <div class="p-4">
        <%= f.label :sake_name, "銘柄" %>
        <%= f.text_field :sake_name, class: "input input-bordered border-black w-full" %>
      </div>
    </div>

    <div class="divider"></div>

    <div class="card bg-base-300 rounded-box">
      <div class="p-4">
        <%= f.label :taste_rating, "口当たり (1-5)", class: "text-xl font-bold" %>
        <div class="rating rating-lg flex items-center overflow-x-auto"> <!-- overflow-x-autoを追加 -->
          <%= f.radio_button :taste_rating, 1, class: "rating-hidden" %>
          <%= f.radio_button :taste_rating, 2, class: "mask mask-star-2" %>
          <%= f.radio_button :taste_rating, 3, class: "mask mask-star-2" %>
          <%= f.radio_button :taste_rating, 4, class: "mask mask-star-2" %>
          <%= f.radio_button :taste_rating, 5, class: "mask mask-star-2" %>
        </div>
        <div class="flex justify-between mt-2">
          <span>甘口</span>
          <span>辛口</span>
        </div>
      </div>
    </div>

    <div class="flex space-x-2 mt-4">
      <%= f.submit "投稿する", class: "btn btn-primary" %>
      <%= link_to "キャンセル", main_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
