<div class="header">
  <h1>アプリ名</h1>
  <%= form_with url: search_path, method: :get, local: true, class: "flex items-center space-x-2" do |form| %>
    <div>
      <label for="title">Title:</label>
      <%= text_field_tag :title, params[:title], placeholder: "Search by title" %>
    </div>

    <div>
      <label for="sake_name">Sake Name:</label>
      <%= text_field_tag :sake_name, params[:sake_name], placeholder: "Search by sake name" %>
    </div>

    <div>
      <label for="username">Username:</label>
      <%= text_field_tag :username, params[:username], placeholder: "Search by username" %>
    </div>

    <div>
      <%= form.submit "Search", class: "bg-blue-500 text-white p-2 rounded" %>
    </div>
  <% end %>
</div>

<div class="sidebar">
  <%= link_to '投稿一覧へ', main_path %>
  <%= link_to '新規投稿', new_post_path %>
  <%= link_to 'メニュー', menu_path %>
</div>

<div class="content">
  <h1><%= @post.title %></h1>
  <p><strong>銘柄:</strong> <%= @post.sake_name %></p>
  <p><strong>口当たり:</strong> <%= @post.taste_rating %>/5</p>
  <p><strong>投稿者 by:</strong> <%= @post.user.username %></p>
  <p><strong>投稿日 at:</strong> <%= @post.created_at.strftime('%B %d, %Y') %></p>

  <%= link_to '編集する', edit_post_path(@post), class: 'btn btn-primary' if current_user == @post.user %>
  <%= link_to '削除する', post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' if current_user == @post.user %>
</div>
